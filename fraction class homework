




class fraction(object):
    def __init__(self,n=None,d=None,w=None):
        self.numerator = n
        self.denominator = d
        self.w = w

    def __str__(self):
        if self.numerator == 0:
            return "%d" % (self.w)
        else:
            return "%d %d / %d" % (self.w , self.numerator , self.denominator)

    def numerator(self,n):
        self.numerator = n 

    def denominator(self,d):
        self.denominator = d

    def __mul__(self,rhs):
        x = self.numerator * rhs.numerator
        y = self.denominator * rhs.denominator
        return fraction(x,y)

    def __add__(self,rhs):
        xa = self.numerator * rhs.denominator
        xb = rhs.numerator * self.denominator
        x = xa + xb
        y = self.denominator * rhs.denominator
        w = (x / y) + self.w
        x = x % y

        return fraction(x,y,w)

if __name__ == '__main__':
    a = fraction(1,2,1)
    b = fraction(1,2,0)
    c = a + b
    print(c)
    
    
    
    
    
